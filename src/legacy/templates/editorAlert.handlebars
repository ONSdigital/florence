<div class="edit-section" id="{{idField}}">
  <div class="edit-section__head">
    <h1>Notices</h1>
    <p>Date | Body copy </p>
  </div>
  <div class="edit-section__content">
    <div id="sortable-{{idField}}" class="edit-section__sortable">
      {{#each list}}
        <div id="{{@index}}" class="edit-section__sortable-item">
          <div class="edit-section__sortable-item--counter float-left">{{plus @index 1}}. </div>
          <input id="date_{{@index}}" type="text" placeholder="Day month year" value="{{this.date}}"/>
          <textarea style="display: none;" id="{{../idField}}-markdown_{{@index}}">{{this.correctionNotice}}</textarea>
          <div class="edit-section__buttons">
            <button class="btn btn--primary btn-markdown-edit" id="{{../idField}}-edit_{{@index}}">Edit</button>
            <button class="btn btn--warning btn-page-delete" id="{{../idField}}-delete_{{@index}}">Delete</button>
          </div>
          <div id="correction-container_{{@index}}" class="correction-alert"></div>
        </div>
      {{/each}}
    </div>
    <div class="text-center">
      <button class="btn btn--subtle btn-add-section" id="add-{{idField}}">Add {{idField}}</button>
    </div>
  </div>
</div>