<section class="panel panel--padded panel--centred col col--6">
    <h1 class="text-align-center">Select a collection</h1>
    <table class="table table--primary table--fixed-height-27 js-selectable-table">
        <thead>
        <tr>
            <th id="collection-name" {{#if error}}style="color: red;" {{/if}} scope="col">Collection name</th>
            <th id="collection-date" scope="col">Publish date</th>
        </tr>
        </thead>
        <tbody>
            {{#each this.unpublished}}
                <tr data-collection-id="{{id}}" data-collections-order="{{@index}}" class="unpublished">
                    <td class="collection-name">{{this.name}}</td>
                    <td class="collection-date">[NOT PUBLISHED]</td>
                </tr>
            {{/each}}
            {{#each this.published}}
                <tr data-collection-id="{{id}}" data-collections-order="{{this.order}}" class="published">
                    <td class="collection-name">{{this.name}}</td>
                    <td class="collection-date">{{this.formattedDate}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</section>
<section class="panel panel--off-canvas col col--6">

</section>