<section class="panel workspace-edit">
  <div class="edit-accordion">

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Metadata</h1>
        <p id="metadata-a">Title | Next release | Key note | Unit | NS | Source</p>
      </div>
      <div class="edit-section__content">
        <div id="metadata-list">
          <div>
            <label for="title">Title
              <textarea class="auto-size" type="text" id="title">{{this.description.title}}</textarea>
            </label>
          </div>
          <div class="next-p">
            <label for="nextRelease">Next release
              <textarea class="auto-size" type="text" id="nextRelease">{{this.description.nextRelease}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactName">Contact name
              <textarea class="auto-size" type="text" id="contactName">{{this.description.contact.name}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactEmail">Contact email
              <textarea class="auto-size" type="text" id="contactEmail">{{this.description.contact.email}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactTelephone">Contact telephone
              <textarea class="auto-size" type="text" id="contactTelephone">{{this.description.contact.telephone}}</textarea>
            </label>
          </div>
          <div>
            <label for="number">Number
              <textarea class="auto-size" type="text" id="number">{{this.description.number}}</textarea>
            </label>
          </div>
          <div>
            <label for="keyNote">Key note
              <textarea class="auto-size" type="text" id="keyNote">{{this.description.keyNote}}</textarea>
            </label>
          </div>
          <div id="natStat">
            <label for="natStat-checkbox">Accredited official statistic </label>
            <input id="natStat-checkbox" type="checkbox" name="natStat" value="false" />
          </div>
          <div>
            <label for="unit">Unit
              <textarea class="auto-size" type="text" id="unit">{{this.description.unit}}</textarea>
            </label>
          </div>
          <div>
            <label for="preUnit">Pre unit
              <textarea class="auto-size" type="text" id="preUnit">{{this.description.preUnit}}</textarea>
            </label>
          </div>
          <div id="isIndex">
            <label for="isIndex">Index? </label>
            <input type="checkbox" name="isIndex" value="false" />
          </div>
          <div>
            <label for="source">Source
              <textarea class="auto-size" type="text" id="source">{{this.description.source}}</textarea>
            </label>
          </div>
          <div>
            <label for="keywords">Keywords
              <input name="tags" id="keywords" value="{{this.description.keywords}}" style="display: none;">
            </label>
            <ul id="keywordsTag"></ul>
          </div>
          <div>
            <label for="metaDescription">Meta description
              <textarea class="auto-size" type="text" id="metaDescription">{{this.description.metaDescription}}</textarea>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div id="one"></div>

    <div id="note"></div>

    <div id="document"></div>

    <div id="timeseries"></div>

    <div id="dataset"></div>

    <div id="qmi"></div>

    <div id="methodology"></div>

    <div id="topics"></div>

    <div id="alert"></div>

  </div>

  <nav class="edit-nav">
    {{> editNav}}
  </nav>

</section>