{
  "name": "florence",
  "description": "Florence javascript build",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ONSdigital/florence"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "testEnvironment": "jest-environment-jsdom-global",
    "collectCoverage": false,
    "globals": {
      "window": true
    },
    "testURL": "http://localhost"
  },
  "devDependencies": {
    "auditjs": "^4.0.25",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "better-npm-audit": "^1.5.0",
    "copy-webpack-plugin": "^5.1.1",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-react": "^7.19.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "handsontable": "^0.35.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "jest-environment-jsdom": "^24.9.0",
    "jest-environment-jsdom-global": "^1.2.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-now": "^1.3.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "prettier": "^1.19.1",
    "prop-types": "^15.5.8",
    "react-test-renderer": "^17.0.2",
    "regenerator-runtime": "^0.10.5",
    "replace-in-file": "^3.4.4",
    "request": "^2.88.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.2"
  },
  "comment": "The handsontable and replace-in-file devDependencies, plus the 'node tablebuilder/handsontable-css-fix.js' build & postinstall scripts are only necessary until version 0.3.2+ of react-handsontable is available and pulled in by dp-table-builder-ui",
  "scripts": {
    "audit": "npx auditjs ossi --whitelist ./audit-allowlist.json --quiet",
    "watch": "cd legacy && npm run watch & npm run watch-refactored",
    "watch-refactored": "node ./node_modules/webpack/bin/webpack.js -d --watch & npm run prettier-watch",
    "build": "node tablebuilder/handsontable-css-fix.js && cd legacy && npm run build && cd ../ && npm run build-refactored",
    "build-refactored": "npm run prettier-cli; NODE_ENV=production node ./node_modules/webpack/bin/webpack.js -p",
    "build-refactored:dev": "node ./node_modules/webpack/bin/webpack.js -d",
    "test": "export NODE_ENV=testing TZ='Europe/London' && ./node_modules/jest/bin/jest.js --no-cache",
    "test-watch": "export NODE_ENV=testing TZ='Europe/London' && ./node_modules/jest/bin/jest.js --watch --no-cache",
    "preinstall": "npx npm-force-resolutions && mkdir -p ../dist && cp -R img/ ../dist/img/",
    "postinstall": "node tablebuilder/handsontable-css-fix.js && npm run build-refactored",
    "prettier-test": "prettier --config \"prettierrc.json\" --check \"app/**/*.{js,jsx}\"",
    "prettier-cli": "prettier --config \"prettierrc.json\" --write \"app/**/*.{js,jsx}\"",
    "prettier-watch": "onchange \"app/**/*.{js,jsx}\" -- prettier --config \"prettierrc.json\" --write {{changed}}",
    "eslint-check": "eslint -c ./.eslintrc.json --print-config ./app | eslint-config-prettier-check"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-regenerator-runtime": "^6.5.0",
    "css-loader": "^3.5.1",
    "dateformat": "^2.0.0",
    "dp-table-builder-ui": "^1.1.0",
    "file-loader": "^3.0.1",
    "install": "^0.8.7",
    "is-empty-object": "^1.1.1",
    "localforage": "^1.5.0",
    "mini-css-extract-plugin": "^0.5.0",
    "minimongo": "^6.8.2",
    "node-sass": "^5.0.0",
    "onchange": "^6.1.0",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^5.1.2",
    "react-router": "^3.2.6",
    "react-router-redux": "^4.0.8",
    "react-transition-group": "^2.9.0",
    "redux": "^3.7.2",
    "redux-auth-wrapper": "^2.0.3",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^10.0.5",
    "style-loader": "^0.13.2",
    "url-loader": "^1.1.2",
    "uuid": "^3.4.0"
  },
  "resolutions": {
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "js-yaml": "^3.13.1",
    "ini": "^1.3.8",
    "moment": "^2.19.3"
  }
}
