{
  "name": "florence",
  "description": "Florence javascript build",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ONSdigital/florence"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "testEnvironment": "jest-environment-jsdom-global",
    "collectCoverage": false,
    "globals": {
      "window": true
    },
    "testURL": "http://localhost"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.11.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "handsontable": "^0.35.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.1.0",
    "jest-environment-jsdom": "^24.0.0",
    "jest-environment-jsdom-global": "^1.1.0",
    "jest-fetch-mock": "^2.1.0",
    "jest-mock-now": "^1.2.1",
    "prettier": "^1.18.2",
    "prettier-webpack-plugin": "^1.2.0",
    "prop-types": "^15.5.8",
    "react-test-renderer": "^15.5.4",
    "regenerator-runtime": "^0.10.5",
    "replace-in-file": "^3.1.1",
    "request": "^2.88.0"
  },
  "comment": "The handsontable and replace-in-file devDependencies, plus the 'node tablebuilder/handsontable-css-fix.js' build & postinstall scripts are only necessary until version 0.3.2+ of react-handsontable is available and pulled in by dp-table-builder-ui",
  "scripts": {
    "watch": "cd legacy && npm run watch & npm run watch-refactored",
    "watch-refactored": "npm run prettier-cli; node ./node_modules/webpack/bin/webpack.js -d --watch",
    "build": "node tablebuilder/handsontable-css-fix.js && cd legacy && npm run build && cd ../ && npm run build-refactored",
    "build-refactored": "npm run prettier-cli; NODE_ENV=production node ./node_modules/webpack/bin/webpack.js -p",
    "build-refactored:dev": "node ./node_modules/webpack/bin/webpack.js -d",
    "test": "export NODE_ENV=testing TZ='Europe/London' && ./node_modules/jest/bin/jest.js --no-cache",
    "test-watch": "export NODE_ENV=testing TZ='Europe/London' && ./node_modules/jest/bin/jest.js --watch --no-cache",
    "postinstall": "node tablebuilder/handsontable-css-fix.js && npm run build-refactored",
    "prettier-test": "prettier --config \"prettierrc.json\" --check \"app/**/*.{js,jsx}\"",
    "prettier-cli": "prettier --config \"prettierrc.json\" --write \"app/**/*.{js,jsx}\""
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-eslint": "^10.0.1",
    "babel-regenerator-runtime": "^6.5.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^0.26.4",
    "dateformat": "^2.0.0",
    "dp-table-builder-ui": "^1.0.20",
    "file-loader": "^3.0.1",
    "install": "^0.8.7",
    "is-empty-object": "^1.1.1",
    "localforage": "^1.5.0",
    "mini-css-extract-plugin": "^0.5.0",
    "minimongo": "^5.1.2",
    "node-sass": "^4.11.0",
    "path": "^0.12.7",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-redux": "^5.1.1",
    "react-router": "^3.2.1",
    "react-router-redux": "^4.0.8",
    "react-transition-group": "^2.4.0",
    "redux": "^3.7.2",
    "redux-auth-wrapper": "^2.0.3",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.13.2",
    "url-loader": "^1.1.2",
    "uuid": "^3.0.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
