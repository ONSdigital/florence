<div id="{{idField}}">
  {{#each list}}
    <div id="{{@index}}" class="edit-section__item">
      <div id="{{../idField}}-edition_{{@index}}" {{../idField}}-url="{{this.uri}}">{{this.label}}</div>
      <input id="date_{{@index}}" type="text" placeholder="Day month year" value="{{this.updateDate}}"/>
      <textarea style="display: none;" id="{{../idField}}-markdown_{{@index}}">{{this.correctionNotice}}</textarea>
      <button class="btn-markdown-edit" id="{{../idField}}-edit_label{{@index}}">Edit label</button>
      <button class="btn-markdown-edit" id="{{../idField}}-edit_{{@index}}">Edit notice</button>
      <button class="btn-page-delete" id="{{../idField}}-delete_{{@index}}">Delete</button>
    </div>
  {{/each}}
</div>