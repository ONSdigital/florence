{{#each this}}
    <div id="{{@index}}" class="edit-section__sortable-item">
        <div class="edit-section__sortable-item--counter float-left">{{plus @index 1}}. </div>
        <div id="chapter-title_{{@index}}" class="edit-section__title" data-url="{{uri}}">{{description.title}}</div>
        <button class="btn-markdown-edit" id="chapter-edit_{{@index}}">Edit</button>
        <button class="btn-page-delete" id="chapter-delete_{{@index}}">Delete</button>
    </div>
{{/each}}