{{#each this}}
  <div id="{{@index}}" class="edit-section__item">
    <input id="date_{{@index}}" type="text" placeholder="Day month year" value="{{this.date}}"/>
    <p id="version-title_{{@index}}" version-url="{{this.uri}}">{{this.description.title}}</p>
    <button class="btn-page-delete" id="correction-delete_{{@index}}">Delete</button>
  </div>
{{/each}}