<div id="{{idField}}">
  {{#each list}}
    <div id="{{@index}}" class="edit-section__item">
      <input id="date_{{@index}}" type="text" placeholder="Day month year" value="{{this.date}}"/>
      <p id="{{../idField}}-title_{{@index}}" {{../idField}}-url="{{this.uri}}">{{this.description.title}}</p>
      <button class="btn-page-delete" id="{{../idField}}-delete_{{@index}}">Delete</button>
    </div>
  {{/each}}
</div>