<div class="edit-section" id="{{idField}}">
  <div class="edit-section__head">
    <h1>Upload supplementary files</h1>
    <p>Title | Name</p>
  </div>
  <div class="edit-section__content">
    <div id="sortable-{{idField}}" class="edit-section__sortable">
      {{#each list}}
        <div id="{{@index}}" class="edit-section__sortable-item">
          <div class="edit-section__sortable-item-counter float-left">{{plus @index 1}}</div>
                    <textarea id="{{../idField}}-title_{{@index}}" class="add-tooltip" placeholder='Type title here and click Save to add
                     it to the page'>{{title}}</textarea>
          <p id="{{../idField}}-filename_show_{{@index}}">{{file}}</p>
          <button class="btn-page-delete" id="{{../idField}}-delete_{{@index}}">Delete</button>
        </div>
      {{/each}}
    </div>
    <div class="text-center">
      <button class="btn-add-section" id="add-{{idField}}">Add supplementary file</button>
    </div>
  </div>
</div>