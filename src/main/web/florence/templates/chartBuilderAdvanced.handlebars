                <div class="refresh-chart"> 
                <label>Highlight Category<br>
                    <div class="select-wrap">
                        <select id="chart-highlight" class="">
                            {{#if_eq chartType 'line'}}
                            {{#select highlight}}
                                <option value="No Highlight">No Highlight</option>
                            {{#each series}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                            {{/select}}
                            {{else}}
                            {{#select highlight}}
                                <option value="No Highlight">No Highlight</option>
                            {{#each categories}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                            {{/select}}
                            {{/if_eq}}
                        </select>
                    </div>
