    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Metadata</h1>
        <p>Description</p>
      </div>
      <div class="edit-section__content">
        <div id="metadata-list">
          <p>Title: <textarea class="auto-size" type="text" id="title" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.title}}</textarea></p>
          <p>Next release: <textarea class="auto-size" type="text" id="nextRelease" cols="20" style="box-sizing: border-box; min-height: 31px;">{{this.nextRelease}}</textarea></p>
          <p>Contact name: <textarea class="auto-size" type="text" id="contactName" cols="20" style="box-sizing: border-box; min-height: 31px;">{{this.contact.name}}</textarea></p>
          <p>Contact email: <textarea class="auto-size" type="text" id="contactEmail" cols="30" style="box-sizing: border-box; min-height: 31px;">{{this.contact.email}}</textarea></p>
          <p>Summary: <textarea class="auto-size" type="text" id="summary" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.summary}}</textarea></p>
          <p>National statistic: <input type="checkbox" name="natStat" value="yes" /> Yes </p>
          <p id="headline1-p">Headline 1: <textarea class="auto-size" type="text" id="headline1" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.headline1}}</textarea></p>
          <p id="headline2-p">Headline 2: <textarea class="auto-size" type="text" id="headline2" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.headline2}}</textarea></p>
          <p id="headline3-p">Headline 3: <textarea class="auto-size" type="text" id="headline3" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.headline3}}</textarea></p>
          <p id="description-p">Description: <textarea class="auto-size" type="text" id="description" cols="40" style="box-sizing: border-box; min-height: 31px;"></textarea></p>
        </div>
      </div>
    </div>


    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Correction</h1>
        <p>Description</p>
      </div>
      <div class="edit-section__content">
        {{!--<div class="edit-section__sortable">--}}
          {{#each this.correction}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <p>Text: <textarea class="auto-size" type="text" id="correction_text_{{@index}}" cols="65" style="box-sizing: border-box; min-height: 31px;">{{correction.text}}</textarea></p>
              <p>Date: <input class="auto-size" type="date" id="correction_date_{{@index}}"/></p>
              <p>Type: <input type="radio" name="correctionType{{@index}}" value="minor"/><label> Minor</label>
                <input type="radio" name="correctionType{{@index}}" value="major"/><label> Major</label>
              </p>
              <button class="btn-page-delete" id="correction-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        {{!--</div>--}}
        <div class="text-center">
          <button class="btn-add-section" id="addCorrection">Add correction</button>
        </div>
      </div>
    </div>

