<section class="panel workspace-edit">
  <div class="edit-accordion">

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Metadata</h1>
        <p id="metadata-a">Title | Contact | Abstract | Keywords</p>
        <p id="metadata-b">Title | Next release | Contact | Summary | NS status | Keywords</p>
        <p id="metadata-d">Title | Next release | Contact | Description | NS status | Keywords</p>
      </div>
      <div class="edit-section__content">
        <div id="metadata-list">
          <div>
            <label for="name">Title
            <textarea class="auto-size" type="text" id="name" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.name}}</textarea>
            </label>
          </div>
          <div class="next-p">
            <label for="nextRelease">Next release
            <textarea class="auto-size" type="text" id="nextRelease" cols="20" style="box-sizing: border-box; min-height: 31px;">{{this.nextRelease}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactName">Contact name
            <textarea class="auto-size" type="text" id="contactName" cols="20" style="box-sizing: border-box; min-height: 31px;">{{this.contact.name}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactEmail">Contact email
            <textarea class="auto-size" type="text" id="contactEmail" cols="30" style="box-sizing: border-box; min-height: 31px;">{{this.contact.email}}</textarea>
            </label>
          </div>
          <div id="summary-p">
            <label for="summary">Summary
            <textarea class="auto-size" type="text" id="summary" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.summary}}</textarea>
            </label>
          </div>
          <div id="abstract-p">
            <label for="abstract">Abstract
            <textarea class="auto-size" type="text" id="abstract" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.abstract}}</textarea>
            </label>
          </div>
          <div id="natStat">
            <label for="natStat">National statistic </label>
            <input type="checkbox" name="natStat" value="false" />
          </div>
          <div id="migrated">
            <label for="migrated">Migrated </label>
            <input type="checkbox" name="migrated" value="false" />
          </div>
          <div id="headline1-p">
            <label for="headline1">Headline 1
            <textarea class="auto-size" type="text" id="headline1" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.headline1}}</textarea>
            </label>
          </div>
          <div id="headline2-p">
            <label for="headline2">Headline 2
            <textarea class="auto-size" type="text" id="headline2" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.headline2}}</textarea>
            </label>
          </div>
          <div id="headline3-p">
            <label for="headline3">Headline 3
            <textarea class="auto-size" type="text" id="headline3" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.headline3}}</textarea>
            </label>
          </div>
          <div id="description-p">
            <label for="description">Description
            <textarea class="auto-size" type="text" id="description" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.description}}</textarea>
            </label>
          </div>
          <div>
            <label for="keywords">Keywords
            <textarea class="auto-size" type="text" id="keywords" cols="40" style="box-sizing: border-box; min-height: 31px;">{{this.keywords}}</textarea>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Correction</h1>
        <p>Date | Notice | Severity</p>
      </div>
      <div class="edit-section__content edit-section__content--correction">
          {{#each this.correction}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <p>Text: <textarea class="auto-size" type="text" id="correction_text_{{@index}}" cols="65" style="box-sizing: border-box; min-height: 31px;">{{text}}</textarea></p>
              <p>Date: <input class="auto-size" type="date" id="correction_date_{{@index}}" value="{{date}}"/></p>
              <p>Type: <input type="radio" name="correctionType{{@index}}" value="minor"/><label> Minor</label>
                <input type="radio" name="correctionType{{@index}}" value="major"/><label> Major</label>
              </p>
              <button class="btn-page-delete" id="correction-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        <div class="text-center">
          <button class="btn-add-section" id="addCorrection">Add correction</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="collapsible">
      <div class="edit-section__head">
        <h1>Collapsible sections</h1>
        <p>Background notes | References | Footnotes</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-tabs" class="edit-section__sortable">
          {{#each this.accordion}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="tab-title_{{@index}}" placeholder="Type title here and click edit to add content">{{title}}</textarea>
              <textarea style="display: none;" id="tab-markdown_{{@index}}">{{markdown}}</textarea>
              <button class="btn-markdown-edit" id="tab-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="tab-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addTab">Add tab</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="relBulletin">
      <div class="edit-section__head">
        <h1>Related bulletins</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-related" class="edit-section__sortable">
          {{#each this.relatedBulletins}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="bulletin-uri_{{@index}}">{{uri}}</textarea>
              <textarea style="display: none;" id="bulletin-title_{{@index}}">{{title}}</textarea>
              <textarea style="display: none;" id="bulletin-summary_{{@index}}">{{summary}}</textarea>
              <button class="btn-page-delete" id="bulletin-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addBulletin">Add bulletin</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="relArticle">
      <div class="edit-section__head">
        <h1>Related articles</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-related" class="edit-section__sortable">
          {{#each this.relatedArticles}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="article-uri_{{@index}}">{{uri}}</textarea>
              <textarea style="display: none;" id="article-title_{{@index}}">{{title}}</textarea>
              <textarea style="display: none;" id="article-summary_{{@index}}">{{summary}}</textarea>
              <button class="btn-page-delete" id="article-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addArticle">Add article</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="relDataset">
      <div class="edit-section__head">
        <h1>Related datasets</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-related" class="edit-section__sortable">
          {{#each this.relatedDatasets}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="dataset-uri_{{@index}}">{{uri}}</textarea>
              <textarea style="display: none;" id="dataset-title_{{@index}}">{{title}}</textarea>
              <textarea style="display: none;" id="dataset-summary_{{@index}}">{{summary}}</textarea>
              <button class="btn-page-delete" id="dataset-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addDataset">Add dataset</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="extLink">
      <div class="edit-section__head">
        <h1>External links</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-external" class="edit-section__sortable">
          {{#each this.externalLinks}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="link-url_{{@index}}">{{url}}</textarea>
              <textarea id="link-title_{{@index}}" placeholder="Paste link here and save">{{linkText}}</textarea>
              <button class="btn-page-delete" id="link-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addLink">Add external link</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="used">
      <div class="edit-section__head">
        <h1>Related bulletins</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-used" class="edit-section__sortable">
          {{#each this.usedIn}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="dataset-uri_{{@index}}">{{uri}}</textarea>
              <textarea style="display: none;" id="used-title_{{@index}}">{{title}}</textarea>
              <textarea style="display: none;" id="used-summary_{{@index}}">{{summary}}</textarea>
              <button class="btn-page-delete" id="used-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-used" id="addUsed">Add article or bulletin</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="download">
      <div class="edit-section__head">
        <h1>Upload files</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-download" class="edit-section__sortable">
          {{#each this.download}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="download-title_{{@index}}" placeholder="Type title here and save to add content">{{title}}</textarea>
              <textarea style="display: none;" id="download-filename_{{@index}}">{{file}}</textarea>
              <div id="download-filename_show_{{@index}}">{{file}}</div>
              <button class="btn-page-delete" id="file-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-download" id="addFile">Add file</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="note">
      <div class="edit-section__head">
        <h1>Notes</h1>
        <p>Body copy</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-notes" class="edit-section__sortable">
          {{#each this.notes}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="note-markdown_{{@index}}" placeholder="Click edit to add content">{{data}}</textarea>
              <button class="btn-markdown-edit" id="note-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="note-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addNote">Add note</button>
        </div>
      </div>
    </div>
  </div>


  <div id="charts">

  </div>

  <div class="edit-section" id="content">
    <div class="edit-section__head">
      <h1>Content</h1>
      <p>Main sections | Title | Body copy</p>
    </div>
    <div class="edit-section__content">
      <div id="sortable-sections" class="edit-section__sortable">
        {{#each this.sections}}
          <div id="{{@index}}" class="edit-section__sortable-item">
            <textarea id="section-title_{{@index}}" placeholder="Type title here and click edit to add content">{{title}}</textarea>
            <textarea style="display: none;" id="section-markdown_{{@index}}">{{markdown}}</textarea>
            <button class="btn-markdown-edit" id="section-edit_{{@index}}">Edit</button>
            <button class="btn-page-delete" id="section-delete_{{@index}}">Delete</button>
          </div>
        {{/each}}
      </div>
      <div class="text-center">
        <button class="btn-add-section" id="addSection">Add section</button>
      </div>
    </div>
  </div>

  <nav class="edit-nav">
      {{> editNav}}
  </nav>

</section>