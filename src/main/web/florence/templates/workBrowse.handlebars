<section class="panel workspace-browse">
  <nav class="tree-nav-holder">
    <ul class="page-list page-list--tree">
        {{#each this}} {{! Each item is an "li" }}
          <li data-url="{{url}}">
            <span class="page-item">{{name}}</span>
            <div class="page-options">
              <button class="btn-browse-edit">Edit</button>
              <button class="btn-browse-create">Create</button>
              <button class="btn-browse-delete">Delete</button>
            </div>
              {{#if children}} {{! Within the context of the current item }}
                <ul>
                    {{> browseNode}} {{! Recursively render the partial }}
                </ul>
              {{/if}}
          </li>
        {{/each}}
    </ul>
  </nav>
</section>