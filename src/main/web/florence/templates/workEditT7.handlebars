<section class="panel workspace-edit">
  <div class="edit-accordion">

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Metadata</h1>
        <p id="metadata-s">Title | Summary | Keywords</p>
        <p id="metadata-q">Title | Contact | Survey | Frequency | Compilation | Coverage | Size | Revised | Keywords</p>
        <p id="metadata-f">Title | Release date | Keywords</p>
        <p id="metadata-ad">Title | Release date | Reference | Keywords</p>
      </div>
      <div class="edit-section__content">
        <div id="metadata-list">
          <div>
            <label for="title">Title
              <textarea class="auto-size" type="text" id="title">{{this.description.title}}</textarea>
            </label>
          </div>
          <div id="summary-p">
            <label for="summary">Summary
              <textarea class="auto-size" type="text" id="summary">{{this.description.summary}}</textarea>
            </label>
          </div>
          <div id="contact-p">
            <label for="contactName">Contact name
              <textarea class="auto-size" type="text" id="contactName">{{this.description.contact.name}}</textarea>
            </label>
            <label for="contactEmail">Contact email
              <textarea class="auto-size" type="text" id="contactEmail">{{this.description.contact.email}}</textarea>
            </label>
            <label for="contactPhone">Contact phone
              <textarea class="auto-size" type="text" id="contactTelephone">{{this.description.contact.telephone}}</textarea>
            </label>
          </div>
          <div id="survey-p">
            <label for="survey">Survey name
              <textarea class="auto-size" type="text" id="survey">{{this.description.surveyName}}</textarea>
            </label>
          </div>
          <div id="frequency-p">
            <label for="frequency">Frequency
              <textarea class="auto-size" type="text" id="frequency">{{this.description.frequency}}</textarea>
            </label>
          </div>
          <div id="compilation-p">
            <label for="compilation">Compilation
              <textarea class="auto-size" type="text" id="compilation">{{this.description.compilation}}</textarea>
            </label>
          </div>
          <div id="geoCoverage-p">
            <label for="geoCoverage">Geographic coverage
              <textarea class="auto-size" type="text" id="geoCoverage">{{this.description.geoCoverage}}</textarea>
            </label>
          </div>
          <div id="sampleSize-p">
            <label for="sampleSize">Sample size
              <textarea class="auto-size" type="text" id="sampleSize">{{this.description.sampleSize}}</textarea>
            </label>
          </div>
          <div id="lastRevised-p">
            <label for="lastRevised">Last revised
              <textarea class="auto-size" type="text" id="lastRevised">{{this.description.lastRevised}}</textarea>
            </label>
          </div>
          <div class="release-date">
            <label for="releaseDate">Release date
              <input id="releaseDate" type="text" placeholder="Day month year" value="{{this.description.releaseDate}}"/>
            </label>
          </div>
          <div id="reference-p">
            <label for="reference">Reference
              <textarea class="auto-size" type="text" id="reference">{{this.description.reference}}</textarea>
            </label>
          </div>
          <div>
            <label for="keywords">Keywords
              <input name="tags" id="keywords" value="{{this.description.keywords}}" style="display: none;">
            </label>
            <ul id="keywordsTag"></ul>
          </div>
          <div>
            <label for="metaDescription">Meta description
              <textarea class="auto-size" type="text" id="metaDescription">{{this.description.metaDescription}}</textarea>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="edit-section" id="content">
      <div class="edit-section__head">
        <h1>Content</h1>
        <p>Body copy</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-content" class="edit-section__sortable">
          {{#each this.markdown}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea class="auto-size" id="content-markdown_{{@index}}" placeholder="Click edit to add content">{{this}}</textarea>
              <button class="btn-markdown-edit" id="content-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="content-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-content">Add content</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="download">
      <div class="edit-section__head">
        <h1>Upload files</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-file" class="edit-section__sortable">
          {{#each this.downloads}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="file-title_{{@index}}" placeholder="Type title here and save to add content">{{title}}</textarea>
              <textarea style="display: none;" id="file-filename_{{@index}}">{{uri}}</textarea>
              <div id="file-filename_show_{{@index}}">{{uri}}</div>
              <button class="btn-page-delete" id="file-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-file">Add file</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="link">
      <div class="edit-section__head">
        <h1>Links</h1>
        <p> Link | Title</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-link" class="edit-section__sortable">
          {{#each this.links}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea class="auto-size" id="link-uri_{{@index}}" placeholder="Paste link here and click edit to add content">{{uri}}</textarea>
              <textarea style="display: none;" id="link-markdown_{{@index}}">{{title}}</textarea>
              <button class="btn-markdown-edit" id="link-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="link-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-link">Add link</button>
        </div>
      </div>
    </div>

  </div>

  <nav class="edit-nav">
    {{> editNav}}
  </nav>

</section>