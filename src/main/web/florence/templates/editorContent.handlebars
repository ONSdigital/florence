<div class="edit-section" id="{{idField}}">
    <div class="edit-section__head">
        <h1>{{#ifCond idField '==' 'section'}}Content{{else}}Collapsible sections{{/ifCond}}</h1>
        <p>{{#ifCond idField '==' 'section'}}Main sections | Title | Body copy{{else}}Background notes | References |
            Footnotes{{/ifCond}}</p>
    </div>
    <div class="edit-section__content">
        <div id="sortable-{{idField}}" class="edit-section__sortable">
            {{#each list}}
                <div id="{{@index}}" class="edit-section__sortable-item">
                    <div class="edit-section__sortable-item--counter float-left">{{plus @index 1}}</div>
                    <textarea class="auto-size" id="{{../idField}}-title_{{@index}}" placeholder="Type title here">{{title}}</textarea>
                    <textarea style="display: none;" id="{{../idField}}-markdown_{{@index}}">{{markdown}}</textarea>

                    <div class="edit-section__buttons">
                        <button class="btn-markdown-edit" id="{{../idField}}-edit_{{@index}}">Edit</button>
                        <button class="btn-page-delete" id="{{../idField}}-delete_{{@index}}">Delete</button>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="text-center">
            <button class="btn-add-section" id="add-{{idField}}">Add {{idField}}</button>
        </div>
    </div>
</div>