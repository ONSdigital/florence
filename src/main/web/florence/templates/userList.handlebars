<section class="panel col col--6 collection-select">
  <h1 class="text-align-center">Select a user</h1>
  <table class="collections-select-table">
    <thead>
    <tr>
      <th id="collection-name" scope="col">Name</th>
      <th id="collection-name" scope="col">Email</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
      <tr data-id="{{email}}">
        <td headers="username" class="collection-name">{{name}}</td>
        <td headers="password" class="collection-name">{{email}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</section>
<section class="panel col col--6 collection-create">
  <h1 class="text-align-center">Create a user</h1>

  <form autocomplete="off" method="post" action="" class="form-create-user" >
    <input id="create-user-username" type="text" placeholder="Username" autocomplete="off" />
    <input id="create-user-email" type="text" placeholder="Email" autocomplete="off" />
    <input id="create-user-password" type="password" placeholder="Password" autocomplete="off" />

    <button class="btn-collection-create">Create user</button>
  </form>
</section>
<section class="panel col col--6 collection-selected">

</section>