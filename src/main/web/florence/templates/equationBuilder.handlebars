<div class="equation-builder overlay">
    <div class="equation-builder__inner">
        <!-- <h1>Chart Builder</h1> -->

        <div id="edit-equation" class="equation-builder__editor">

            <label for="equation-title">Title
                <input type="text" id="equation-title" placeholder="[Title]" value="{{title}}"/>
            </label>

            <label for="equation-content">Equation markdown</label>
             <textarea id="equation-content" placeholder="[Equation markdown]" rows="20">{{content}}</textarea>

        </div>

        <div id="preview-equation" class="equation-builder__preview">



        </div>

        <div class="equation-builder__footer">
            <button class="btn btn--positive btn-equation-builder-create">Save equation</button>
            <button class="btn btn-equation-builder-cancel">Cancel</button>
        </div>

    </div>
</div>