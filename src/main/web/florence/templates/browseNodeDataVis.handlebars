{{#each children}} {{! Each item is an "li" }}
    <li data-url="{{#if uri}}{{uri}}{{else}}/{{description.title}}{{/if}}" >
        <span class="page__item{{#unless uri}} page__item--directory{{else}} page__item--{{type}}{{/unless}} {{#if_eq description.title 'visualisations'}}datavis-directory{{/if_eq}}">{{description.title}}</span>
        <div class="page__buttons">
            {{#unless uri}}<div></div><button class="btn-browse-create-datavis">Upload visualisation</button></div>{{/unless}}
            {{#if uri}}<button class="btn-browse-edit">Edit</button>{{/if}}
        </div>
        {{#if children}} {{! Within the context of the current item }}
            <ul>
                {{> browseNodeDataVis}} {{! Recursively render the partial }}
            </ul>
        {{/if}}
    </li>
{{/each}}