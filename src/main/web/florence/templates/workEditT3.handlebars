<section class="panel workspace-edit">
  <div class="edit-accordion">

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Metadata</h1>
        <p>Title | Summary | Keywords</p>
      </div>
      <div class="edit-section__content">
        <div id="metadata-list">
          <div>
            <label for="title">Title
              <textarea class="auto-size" type="text" id="title">{{this.title}}</textarea>
            </label>
          </div>
          <div id="summary-p">
            <label for="summary">Summary
              <textarea class="auto-size" type="text" id="summary">{{this.summary}}</textarea>
            </label>
          </div>
          <div>
            <label for="keywords">Keywords
              <textarea class="auto-size" type="text" id="keywords">{{this.keywords}}</textarea>
            </label>
          </div>
          <div>
            <label for="metaDescription">Meta description
              <textarea class="auto-size" type="text" id="metaDescription">{{this.metaDescription}}</textarea>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="edit-section" id="timeseries">
      <div class="edit-section__head">
        <h1>Time series related to {{this.title}}</h1>
        <p></p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-timeseries" class="edit-section__sortable">
          {{#each this.items}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <p id="item-title_{{@index}}">{{data.title}}</p>
              <!--<p style="display: none;" id="item-uri_{{@index}}">{{uri}}</p>-->
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="edit-section" id="bulletins">
      <div class="edit-section__head">
        <h1>Bulletins related to {{this.title}}</h1>
        <p></p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-bulletins" class="edit-section__sortable">
          {{#each this.statsBulletins}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <p id="item-title_{{@index}}">{{title}}</p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="edit-section" id="articles">
      <div class="edit-section__head">
        <h1>Articles related to {{this.title}}</h1>
        <p></p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-articles" class="edit-section__sortable">
          {{#each this.relatedArticles}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <p id="item-title_{{@index}}">{{title}}</p>
              <!--<p style="display: none;" id="item-abstract_{{@index}}">{{_abstract}}</p>-->
              <!--<p style="display: none;" id="item-uri_{{@index}}">{{uri}}</p>-->
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="edit-section" id="datasets">
      <div class="edit-section__head">
        <h1>Datasets related to {{this.title}}</h1>
        <p></p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-datasets" class="edit-section__sortable">
          {{#each this.datasets}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <p id="item-title_{{@index}}">{{title}}</p>
              <!--<p style="display: none;" id="item-summary_{{@index}}">{{summary}}</p>-->
              <!--<p style="display: none;" id="item-uri_{{@index}}">{{uri}}</p>-->
            </div>
          {{/each}}
        </div>
      </div>
    </div>

  </div>

  <nav class="edit-nav">
    {{> editNav}}
  </nav>

</section>