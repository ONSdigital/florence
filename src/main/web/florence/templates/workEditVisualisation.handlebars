<section class="panel workspace-edit">
    <div class="edit-accordion">
        <div class="edit-section">
            <div class="edit-section__head">
                <h1>Metadata</h1>

                <p id="metadata-d">Title | Unique ID</p>
            </div>
            <div class="edit-section__content">
                <div id="metadata-list">
                    <label for="title">Title
                        <textarea class="auto-size" type="text" disabled id="title">{{this.description.title}}</textarea>
                    </label>
                    <label for="uid">
                        Unique ID
                        <textarea name="uid" id="uid" disabled>{{this.uid}}</textarea>
                    </label>
                </div>
            </div>
        </div>

        <div class="edit-section">
            <div class="edit-section__head">
                <h1>Visualisation</h1>
                <p>File upload</p>
            </div>
            <div class="edit-section__content">
                <div id="visualisation">
    {{!-- {{#if this.zipTitle}}
        <form id="edit-vis">
