                                <input type="file" name="input-vis" id="input-vis" accept=".zip">
                            </label>
                            <!--<button class="btn btn--primary btn--inline-block" type="submit" value="upload-vis">Submit</button>-->
                        </form>
                    {{!-- {{/if}} --}}
                </div>
            </div>
        </div>

    </div>
    <nav class="edit-nav">
        {{> editNav}}
    </nav>
</section>