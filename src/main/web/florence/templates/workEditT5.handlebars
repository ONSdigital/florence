<section class="panel workspace-edit">
  <div class="edit-accordion">

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Metadata</h1>
        <p id="metadata-a">Title | Next release | Key note | Unit | NS | Source</p>
      </div>
      <div class="edit-section__content">
        <div id="metadata-list">
          <div>
            <label for="title">Title
              <textarea class="auto-size" type="text" id="title">{{this.description.title}}</textarea>
            </label>
          </div>
          <!--<div class="edition">-->
            <!--<label for="edition">Edition-->
              <!--<textarea class="auto-size" type="text" id="edition">{{this.description.edition}}</textarea>-->
            <!--</label>-->
          <!--</div>-->
          <!--<div class="release-date">-->
            <!--<label for="releaseDate">Release date-->
              <!--<input id="releaseDate" type="text" placeholder="Day month year" value="{{this.description.releaseDate}}"/>-->
              <!--&lt;!&ndash;<textarea class="auto-size" type="text" id="releaseDate">{{this.description.releaseDate}}</textarea>&ndash;&gt;-->
            <!--</label>-->
          <!--</div>-->
          <div class="next-p">
            <label for="nextRelease">Next release
              <textarea class="auto-size" type="text" id="nextRelease">{{this.description.nextRelease}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactName">Contact name
              <textarea class="auto-size" type="text" id="contactName">{{this.description.contact.name}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactEmail">Contact email
              <textarea class="auto-size" type="text" id="contactEmail">{{this.description.contact.email}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactTelephone">Contact telephone
              <textarea class="auto-size" type="text" id="contactTelephone">{{this.description.contact.telephone}}</textarea>
            </label>
          </div>
          <div id="number">
            <label for="number">Number
              <textarea class="auto-size" type="text" id="number">{{this.description.number}}</textarea>
            </label>
          </div>
          <div id="keyNote">
            <label for="keyNote">Key note
              <textarea class="auto-size" type="text" id="keyNote">{{this.description.keyNote}}</textarea>
            </label>
          </div>
          <div id="natStat">
            <label for="natStat">National statistic </label>
            <input type="checkbox" name="natStat" value="false" />
          </div>
          <!--<div id="migrated">-->
            <!--<label for="migrated">Migrated </label>-->
            <!--<input type="checkbox" name="migrated" value="false" />-->
          <!--</div>-->
          <div id="unit">
            <label for="unit">Unit
              <textarea class="auto-size" type="text" id="unit">{{this.description.unit}}</textarea>
            </label>
          </div>
          <div id="preUnit">
            <label for="preUnit">Pre unit
              <textarea class="auto-size" type="text" id="preUnit">{{this.description.preUnit}}</textarea>
            </label>
          </div>
          <div id="source">
            <label for="source">Source
              <textarea class="auto-size" type="text" id="source">{{this.description.source}}</textarea>
            </label>
          </div>
          <div>
            <label for="keywords">Keywords
              <textarea class="auto-size" type="text" id="keywords">{{this.description.keywords}}</textarea>
            </label>
          </div>
          <div>
            <label for="metaDescription">Meta description
              <textarea class="auto-size" type="text" id="metaDescription">{{this.description.metaDescription}}</textarea>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="edit-section" id="content">
      <div class="edit-section__head">
        <h1>Section</h1>
        <p>Body copy</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-sections" class="edit-section__sortable">
          {{#each this.sections}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea style="display: none;" id="section-markdown_{{@index}}" placeholder="Type or click edit to add content">{{markdown}}</textarea>
              <button class="btn-markdown-edit" id="section-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="section-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addSection">Add section</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="note">
      <div class="edit-section__head">
        <h1>Notes</h1>
        <p>Body copy</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-notes" class="edit-section__sortable">
          {{#each this.notes}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea class="auto-size" id="note-markdown_{{@index}}" placeholder="Type or click edit to add content">{{markdown}}</textarea>
              <button class="btn-markdown-edit" id="note-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="note-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addNote">Add note</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="relBulletin">
      <div class="edit-section__head">
        <h1>Related bulletins and articles</h1>
        <p>Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-document" class="edit-section__sortable">
          {{#each this.relatedDocuments}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="document-uri_{{@index}}">{{uri}}</textarea>
              <button class="btn-page-delete" id="document-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addBulletin">Add bulletin or article</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="relTimeseries">
      <div class="edit-section__head">
        <h1>Related time series</h1>
        <p>Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-timeseries" class="edit-section__sortable">
          {{#each this.relatedTimeseries}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="timeseries-uri_{{@index}}">{{uri}}</textarea>
              <button class="btn-page-delete" id="timeseries-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addTimeseries">Add time series</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="relDataset">
      <div class="edit-section__head">
        <h1>Related datasets</h1>
        <p>Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-dataset" class="edit-section__sortable">
          {{#each this.relatedDatasets}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea id="dataset-uri_{{@index}}">{{uri}}</textarea>
              <button class="btn-page-delete" id="dataset-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="addDataset">Add dataset</button>
        </div>
      </div>
    </div>

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Correction</h1>
        <p>Date | Notice | Severity</p>
      </div>
      <div class="edit-section__content edit-section__content--correction">
        {{#each this.correction}}
          <div id="{{@index}}" class="edit-section__sortable-item">
            <p>Text: <textarea class="auto-size" type="text" id="correction_text_{{@index}}" cols="65" style="box-sizing: border-box; min-height: 31px;">{{text}}</textarea></p>
            <p>Date: <input class="auto-size" type="date" id="correction_date_{{@index}}" value="{{date}}"/></p>
            <p>Type: <input type="radio" name="correctionType{{@index}}" value="minor"/><label> Minor</label>
              <input type="radio" name="correctionType{{@index}}" value="major"/><label> Major</label>
            </p>
            <button class="btn-page-delete" id="correction-delete_{{@index}}">Delete</button>
          </div>
        {{/each}}
        <div class="text-center">
          <button class="btn-add-section" id="addCorrection">Add correction</button>
        </div>
      </div>
    </div>

  </div>

  <nav class="edit-nav">
    {{> editNav}}
  </nav>

</section>