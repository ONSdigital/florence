<div class="edit-section" id="content">
    <div class="edit-section__head">
        <h1>{{header}}</h1>
        <p>Body copy</p>
    </div>
    <div class="edit-section__content">
        <div id="sortable-{{idField}}" class="edit-section__sortable">
            {{#each list}}
                <div id="{{@index}}" class="edit-section__sortable-item">
                    <textarea class="auto-size" id="{{../idField}}-markdown_{{@index}}" placeholder="Click edit to add
                    content" style="display: none;">{{this}}</textarea>
                    <div class="float-left">Paragraph {{plus @index 1}}</div>
                    <button class="btn-markdown-edit" id="{{../idField}}-edit_{{@index}}">Edit</button>
                    <button class="btn-page-delete" id="{{../idField}}-delete_{{@index}}">Delete</button>
                </div>
            {{/each}}
        </div>
        <div class="text-center">
            <button class="btn-add-section" id="add-{{idField}}">Add content</button>
        </div>
    </div>
</div>