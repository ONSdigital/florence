<section class="panel workspace-edit">
  <div class="edit-accordion">

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Metadata</h1>
        <p id="metadata-a">Title | Contact | Abstract | Keywords</p>
      </div>
      <div class="edit-section__content">
        <div id="metadata-list">
          <div>
            <label for="title">Title
              <textarea class="auto-size" type="text" id="title">{{this.description.title}}</textarea>
            </label>
          </div>
          <div class="edition">
            <label for="edition">Headline
              <textarea class="auto-size" type="text" id="headline">{{this.description.headline}}</textarea>
            </label>
          </div>
          <div class="release-date">
            <label for="releaseDate">Release date
              <input id="releaseDate" type="text" placeholder="Day month year" value="{{this.description.releaseDate}}"/>
            </label>
          </div>
          <div class="next-p">
            <label for="nextRelease">Next release
              <textarea class="auto-size" type="text" id="nextRelease">{{this.description.nextRelease}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactName">Contact name
              <textarea class="auto-size" type="text" id="contactName">{{this.description.contact.name}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactEmail">Contact email
              <textarea class="auto-size" type="text" id="contactEmail">{{this.description.contact.email}}</textarea>
            </label>
          </div>
          <div>
            <label for="contactTelephone">Contact telephone
              <textarea class="auto-size" type="text" id="contactTelephone">{{this.description.contact.telephone}}</textarea>
            </label>
          </div>
          <div id="abstract-p">
            <label for="abstract">Abstract
              <textarea class="auto-size" type="text" id="abstract">{{this.description._abstract}}</textarea>
            </label>
          </div>
          <div id="natStat">
            <label for="natStat">National statistic </label>
            <input type="checkbox" name="natStat" value="false" />
          </div>
          <div>
            <label for="keywords">Keywords
              <input name="tags" id="keywords" value="{{this.description.keywords}}" style="display: none;">
            </label>
            <ul id="keywordsTag"></ul>
          </div>
          <div>
            <label for="metaDescription">Meta description
              <textarea class="auto-size" type="text" id="metaDescription">{{this.description.metaDescription}}</textarea>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="edit-section" id="content">
      <div class="edit-section__head">
        <h1>Content</h1>
        <p>Main sections | Title | Body copy</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-section" class="edit-section__sortable">
          {{#each this.sections}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea class="auto-size" id="section-title_{{@index}}" placeholder="Type title here and click edit to add content">{{title}}</textarea>
              <textarea style="display: none;" id="section-markdown_{{@index}}">{{markdown}}</textarea>
              <button class="btn-markdown-edit" id="section-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="section-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-section">Add section</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="collapsible">
      <div class="edit-section__head">
        <h1>Collapsible sections</h1>
        <p>Background notes | References | Footnotes</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-tab" class="edit-section__sortable">
          {{#each this.accordion}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea class="auto-size" id="tab-title_{{@index}}" placeholder="Type title here and click edit to add content">{{title}}</textarea>
              <textarea style="display: none;" id="tab-markdown_{{@index}}">{{markdown}}</textarea>
              <button class="btn-markdown-edit" id="tab-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="tab-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-tab">Add collapsible section</button>
        </div>
      </div>
    </div>

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Related documents</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-document" class="edit-section__sortable">
          {{#each this.relatedDocuments}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              {{description.title}}
              <textarea id="document-uri_{{@index}}">{{uri}}</textarea>
              <button class="btn-page-delete" id="document-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-document">Add document</button>
        </div>
      </div>
    </div>

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Related data</h1>
        <p>Title | Link</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-data" class="edit-section__sortable">
          {{#each this.relatedData}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              {{description.title}}
              <textarea id="data-uri_{{@index}}">{{uri}}</textarea>
              <button class="btn-page-delete" id="data-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-data">Add related data</button>
        </div>
      </div>
    </div>

    <div class="edit-section" id="links">
      <div class="edit-section__head">
        <h1>Links</h1>
        <p> Link | Title</p>
      </div>
      <div class="edit-section__content">
        <div id="sortable-link" class="edit-section__sortable">
          {{#each this.links}}
            <div id="{{@index}}" class="edit-section__sortable-item">
              <textarea class="auto-size" id="link-uri_{{@index}}" placeholder="Paste link here and click edit to add content">{{uri}}</textarea>
              <textarea style="display: none;" id="link-markdown_{{@index}}">{{title}}</textarea>
              <button class="btn-markdown-edit" id="link-edit_{{@index}}">Edit</button>
              <button class="btn-page-delete" id="link-delete_{{@index}}">Delete</button>
            </div>
          {{/each}}
        </div>
        <div class="text-center">
          <button class="btn-add-section" id="add-link">Add link</button>
        </div>
      </div>
    </div>

    <div id="charts"></div>

    <div id="tables"></div>

    <div class="edit-section">
      <div class="edit-section__head">
        <h1>Correction</h1>
        <p>Date | Notice | Severity</p>
      </div>
      <div class="edit-section__content edit-section__content--correction">
        {{#each this.correction}}
          <div id="{{@index}}" class="edit-section__sortable-item">
            <p>Text: <textarea class="auto-size" type="text" id="correction_text_{{@index}}" cols="65" style="box-sizing: border-box; min-height: 31px;">{{text}}</textarea></p>
            <p>Date: <input class="auto-size" type="date" id="correction_date_{{@index}}" value="{{date}}"/></p>
            <p>Type: <input type="radio" name="correctionType{{@index}}" value="minor"/><label> Minor</label>
              <input type="radio" name="correctionType{{@index}}" value="major"/><label> Major</label>
            </p>
            <button class="btn-page-delete" id="correction-delete_{{@index}}">Delete</button>
          </div>
        {{/each}}
        <div class="text-center">
          <button class="btn-add-section" id="addCorrection">Add correction</button>
        </div>
      </div>
    </div>

  </div>

  <nav class="edit-nav">
    {{> editNavCompendium}}
  </nav>

</section>