{{#each children}} {{! Each item is an "li" }}
  <li data-url="{{url}}">
    <span class="page-item">{{name}}</span>
    <div class="page-options">
      <button class="btn-page-edit">Edit</button>
      <button class="btn-page-edit">Create</button>
      <button class="btn-page-delete">Delete</button>
    </div>
    {{#if children}} {{! Within the context of the current item }}
        <ul>
          {{> browseNode}} {{! Recursively render the partial }}
        </ul>
      {{/if}}
  </li>
{{/each}}