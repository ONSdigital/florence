{
  "devDependencies": {
    "catw": "latest",
    "cat": "latest",
    "onchange": "latest"
  },
  "scripts": {
    "watch-js": "catw src/main/web/florence/js/functions/*.js src/main/web/florence/js/third-party/*.js -o src/main/web/florence/js/main.js -v",
    "build-js": "cat src/main/web/florence/js/functions/*.js src/main/web/florence/js/third-party/*.js > src/main/web/florence/js/main.js",
    "watch-templates": "npm run build-templates && onchange 'src/main/web/florence/templates/*.handlebars' -- npm run build-templates ",
    "build-templates": "handlebars src/main/web/florence/templates/*.handlebars --output src/main/web/florence/js/templates.js",
    "watch": "npm run watch-js & npm run watch-templates"
  }
}
