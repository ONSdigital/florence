<div class="edit-section" id="images">
    <div class="edit-section__head">
        <h1>Images</h1>

        <p>Edit existing images</p>
    </div>
    <div id="image-list" class="edit-section__content">
        <div id="sortable-image" class="edit-section__sortable">
            {{#each this.images}}
                <div id="{{@index}}" class="edit-section__sortable-item">
                    <div class="edit-section__title">{{title}}</div>
                    <input class="copy-markdown-target" style="position:absolute;left:-99999px;" value="&lt;ons-image path=&#34;{{filename}}&#34; /&gt;">
                    <div class="edit-section__buttons">
                        <button class="btn btn-markdown-edit copy-markdown">
                            Copy
                            <div class="tick-animation">
                                <div class="tick-animation-trigger"></div>
                                <svg version="1.1" id="tick" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 37 37" style="enable-background:new 0 0 37 37;" xml:space="preserve">
                                    <path class="circ path" style="fill:none;stroke:#F5F6F7;stroke-width:3;stroke-linejoin:round;stroke-miterlimit:10;" d="
                                        M30.5,6.5L30.5,6.5c6.6,6.6,6.6,17.4,0,24l0,0c-6.6,6.6-17.4,6.6-24,0l0,0c-6.6-6.6-6.6-17.4,0-24l0,0C13.1-0.2,23.9-0.2,30.5,6.5z"
                                        />
                                    <polyline class="tick path" style="fill:none;stroke:#F5F6F7;stroke-width:3;stroke-linejoin:round;stroke-miterlimit:10;" points="
                                        11.6,20 15.9,24.2 26.4,13.8 "/>
                                </svg>
                            </div>
                        </button>
                        <button class="btn btn--primary btn-markdown-edit" id="image-edit_{{@index}}">Edit</button>
                        <button class="btn btn--warning btn-page-delete" id="image-delete_{{@index}}">Delete</button>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="text-center">
            <button class="btn btn--subtle btn-add-section" id="add-image">Add image</button>
        </div>
    </div>
</div>